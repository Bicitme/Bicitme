<h1>Presupuestos</h1>
<h2>Seleccione un presupuesto a aceptar:</h1>
<%if current_user.usuar_tipo_cod == 'E'%>
		<table class="table table-striped">
  <thead>
	<tr>
	  <th>Prep precio min</th>
	  <th>Prep precio max</th>
	  <th>Prep comentario</th>
	  <th>Prep estado</th>
	  <th>Taller</th>
	  <th>Reparacion</th>
	  <th colspan="3"></th>
	</tr>
  </thead>
	<% end %>
<%if current_user.usuar_tipo_cod == 'C'%>
		<table class="table table-striped">
  <thead>
	<tr>
	  <th>Descripcion</th>
	  <th>Bicicleta Marca</th>
	  <th>Bicicleta Modelo</th>
	  <th>Color Principal</th>
	  <th>Precio min</th>
	  <th>Precio max</th>
	  <th>Prep comentario</th>
	  <th>Prep estado</th>
	  <th>Taller</th>
	  <th>Reparacion</th>
	  <th colspan="3"></th>
	</tr>
  </thead>
	<% end %>

  <tbody>
	<%if current_user.usuar_tipo_cod == 'C'%>
		<% @presupuestos.each do |presupuesto| %>
		  <tr>
			<td><%= presupuesto.rep_comentario %></td>
			<td><%= presupuesto.bic_marca %></td>
			<td><%= presupuesto.bic_modelo %></td>
			<td><%= presupuesto.bic_color_princ %></td>
			<td><%= presupuesto.prep_precio_min %></td>
			<td><%= presupuesto.prep_precio_max %></td>
			<td><%= presupuesto.prep_comentario %></td>
			<td><%= presupuesto.prep_estado %></td>
			<td><%= presupuesto.taller_nombre %></td>
			<td><%= presupuesto.reparacion_id %></td> 
			<td><%= link_to 'Show', presupuesto %></td>
			<!--<td><%= link_to 'Edit', edit_presupuesto_path(presupuesto) %></td>
			<td><%= link_to 'Destroy', presupuesto, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
		  </tr>
		<% end %>
	<% end %>
	<%if current_user.usuar_tipo_cod == 'E'%>
		<% @presupuestos.each do |presupuesto| %>
		  <tr>
			<td><%= presupuesto.prep_precio_min %></td>
			<td><%= presupuesto.prep_precio_max %></td>
			<td><%= presupuesto.prep_comentario %></td>
			<td><%= presupuesto.prep_estado %></td>
			<td><%= presupuesto.taller_nombre %></td>
			<td><%= presupuesto.reparacion_id %></td> 
			<td><%= link_to 'Show', presupuesto %></td>
			<!--<td><%= link_to 'Edit', edit_presupuesto_path(presupuesto) %></td>
			<td><%= link_to 'Destroy', presupuesto, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
		  </tr>
		<% end %>
	<% end %>
  </tbody>
</table>

<br>
<%if current_user.usuar_tipo_cod == 'E'%>
	<%= link_to 'New Presupuesto', new_presupuesto_path %>
<% end %>