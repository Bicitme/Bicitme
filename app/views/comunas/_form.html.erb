<%= form_for(@comuna) do |f| %>
  <% if @comuna.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comuna.errors.count, "error") %> No se pudo realizar la accion:</h2>

      <ul>
      <% @comuna.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"Nombre" %><br>
    <%= f.text_field :com_nombre, class:"form-control", required: true  %>
  </div>
  <div class="actions">
    <%= f.submit "Crear Comuna", class:"btn btn-success"%>
  </div>
<% end %>
