<p id="notice"><%= notice %></p>

<h1>Listing Denuncia</h1>

<table>
  <thead>
    <tr>
      <th>Den denunciante</th>
      <th>Den descripcion</th>
      <th>Den fecha</th>
      <th>Den estado</th>
      <th>Ciclista</th>
      <th>Taller</th>
      <th>Reparacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @denuncia.each do |denuncium| %>
      <tr>
        <td><%= denuncium.den_denunciante %></td>
        <td><%= denuncium.den_descripcion %></td>
        <td><%= denuncium.den_fecha %></td>
        <td><%= denuncium.den_estado %></td>
        <td><%= denuncium.ciclista_id %></td>
        <td><%= denuncium.taller_id %></td>
        <td><%= denuncium.reparacion_id %></td>
        <td><%= link_to 'Show', denuncium %></td>
        <td><%= link_to 'Edit', edit_denuncium_path(denuncium) %></td>
        <td><%= link_to 'Destroy', denuncium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

